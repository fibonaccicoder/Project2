<body>

    {{> navbar/navbar-block}}

    <div class="container home">

        <div class="jumbotron">
            <h1 class="display-4" id="title">Journaling</h1>
            <p id="lead">Meet today with full presence and power.</p>
            <hr id="my-4">
            <br>
            <p>Spend five minutes flowing with gratitude and writing it out! </p>

        </div>
    </div>


    </div>
    </div>
    <div class="col-sm-8">
        <div class="panel panel-default">

            <div class="panel-heading" id="centerhead">
                <strong>Add a New Journal Entry</strong>
            </div>

            <div class="panel-body">
                <form class="create-form" id="addjournal">
                    <div class="form-group">
                        <label for="newjournaltitle" id="color-override">Title:</label>
                        <input type="text" id="newjournaltitle" name="title">
                        <br>
                        <label for="newjournalbody" id="color-override">Body:</label>
                        <textarea class="form-control" rows="10" id="newjournalbody"></textarea>
                        <button type="submit" class="btn btn-success" id="addjournal">
                            <span class="fa fa-thumbs-up"></span>
                        </button>
                    </div>
                </form>
            </div>

        </div>
    </div>

    <!-- Books to read -->
    <div class="col-sm-6">
        <div class="panel panel-default">
            <div class="panel-heading" id="lefthead">
                <strong>Boost that Brain</strong>
            </div>
            <div class="panel-body">

                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Title</th>
                            <th>Edit</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each journals}}
                        <tr>
                            <td>{{this.createdAt}}</td>
                            <td>{{this.title}}</td>
                            <td>

                                <button type="button" class="editJournal btn btn-warning" id="editJournal" data-id="{{this.id}}" data-newCompleted="{{completed}}">
                                    <span class="fa fa-check"></span>
                                </button>
                                <a href="/{{this.id}}">Update this quote</a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

